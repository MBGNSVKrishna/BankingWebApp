@model IEnumerable<BankingWebApp.Models.Tr>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TrDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TrDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TrId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TrId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TrId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
